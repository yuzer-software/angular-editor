    "@tinkoff/ng-dompurify": "^3.0.0",
    "bootstrap": "^4.5.3",
    "dompurify": "^2.3.3",
    "ngx-color-picker": "^12.0.1",
    "rxjs": "~6.6.3",
    "tslib": "^2.3.1",
    "zone.js": "~0.11.4"
  },
